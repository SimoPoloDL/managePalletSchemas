<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:t="sap.ui.table">
	<Dialog title="{i18n>refillchassis.view.settingsDialog.title}" stretch="false">
		<content>
			<VBox>
				<Table inset="false" items="{modelSettings>/}" width="55rem">
					<columns>
						<Column width="10rem" hAlign="Center">
							<Text text="{i18n>refillchassis.view.settingsDialog.linename}"/>
						</Column>
						<Column width="15rem" hAlign="Center">
							<Text text="{i18n>refillchassis.view.settingsDialog.max_pallet}"/>
						</Column>
						<Column width="15rem" hAlign="Center">
							<Text text="{i18n>refillchassis.view.settingsDialog.refill_min}"/>
						</Column>
						<Column width="15rem" hAlign="Center">
							<Text text="{i18n>refillchassis.view.settingsDialog.return_min}"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem vAlign="Middle">
							<cells>
								<Text text="{modelSettings>LINENAME}"/>
								<HBox justifyContent="Center">
									<Button icon="sap-icon://less" press="onPressLess" class="buttonRound" enabled="{= ${modelSettings>MAX_PALLET} &gt; 0}"/>
									<Input value="{modelSettings>MAX_PALLET}" type="Number" width="4rem" textAlign="Center" liveChange="onSettingsInputLiveChange"/>
									<Button icon="sap-icon://add" press="onPressAdd" class="buttonRound"/>
								</HBox>
								<HBox justifyContent="Center">
									<Button icon="sap-icon://less" press="onPressLess" class="buttonRound" enabled="{= ${modelSettings>REFILL_MIN} &gt; 0}"/>
									<Input value="{modelSettings>REFILL_MIN}" type="Number" width="4rem" textAlign="Center"/>
									<Button icon="sap-icon://add" press="onPressAdd" class="buttonRound"/>
								</HBox>
								<HBox justifyContent="Center">
									<Button icon="sap-icon://less" press="onPressLess" class="buttonRound" enabled="{= ${modelSettings>RETURN_MIN} &gt; 0}"/>
									<Input value="{modelSettings>RETURN_MIN}" type="Number" width="4rem" textAlign="Center"/>
									<Button icon="sap-icon://add" press="onPressAdd" class="buttonRound"/>
								</HBox>
								<!-- mettere live change che minimo è zero e disabilitare tasto meno quando è 0 -->
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
		</content>
		<beginButton>
			<Button type="Emphasized" text="{i18n>refillchassis.view.settingsDialog.salva}" press="onPressSaveSettings"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>refillchassis.view.settingsDialog.chiudi}" press="onPressCloseSettings"/>
		</endButton>

	</Dialog>
</core:FragmentDefinition>
